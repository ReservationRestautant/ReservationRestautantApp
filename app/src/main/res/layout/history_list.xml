<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:id="@+id/itemEleRcv"
    android:backgroundTint="#FEFAEF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgEle"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:src="@drawable/ic_dinner"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/timeBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgEle"
            android:text="Book time"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/imgPeople"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/timeBook"
            android:layout_toRightOf="@+id/imgEle"
            android:src="@drawable/ic_people"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/numberPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeBook"
            android:layout_toRightOf="@+id/imgPeople"
            android:text="Num people"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/priceDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgPeople"
            android:layout_toRightOf="@+id/imgEle"
            android:text="Deposit"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>