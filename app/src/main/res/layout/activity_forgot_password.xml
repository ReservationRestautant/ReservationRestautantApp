<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#45D14A"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/startedTextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password!"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/startedTextView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Don’t worry! Enter your registered "
            android:textColor="#565B56"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/startedTextView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:text="phone below to receive password reset"
            android:textColor="#565B56"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/startedTextView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:text="instruction"
            android:textColor="#565B56"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="314dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/letter" />


        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="316dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:hint="      Your Phone"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:background="@drawable/form_input"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startedTextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:text="Remember Password?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/loginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:text="Login"
                android:textColor="#91C789"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>


        <Button
            android:id="@+id/SendButton"
            android:layout_width="285dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="#32B768"
            android:text="Send"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startedTextView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:text="Dont’t Have An Account?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/SignupLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:text="Sign up"
                android:textColor="#91C789"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>