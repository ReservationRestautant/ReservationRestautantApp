<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/returnEditButton"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/white"
            android:text="Edit Profile"
            android:textColor="@color/grey"
            android:drawableLeft="@drawable/baseline_chevron_left_24"/>

        <TextView
            android:id="@+id/profileFullNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Full Name"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_below="@+id/returnEditButton"
            android:textColor="#858484"/>

        <EditText
            android:id="@+id/editProfileTextFullName"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:hint="Shambhavi Mishra"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:background="@drawable/inputtext_bg"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:layout_below="@+id/profileFullNameEdit"/>

        <TextView
            android:id="@+id/profilePhoneEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Phone"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_below="@+id/editProfileTextFullName"
            android:textColor="#858484"/>

        <EditText
            android:id="@+id/editProfilePhone"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:hint="0987476524"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:background="@drawable/inputtext_bg"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="10dp"
            android:layout_below="@+id/profilePhoneEditText"/>

        <TextView
            android:id="@+id/profilePasswordEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Password"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_below="@+id/editProfilePhone"
            android:textColor="#858484"/>

        <EditText
            android:id="@+id/editProfilePassword"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:hint="##########"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:background="@drawable/inputtext_bg"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawableRight="@drawable/baseline_remove_red_eye_24"
            android:drawablePadding="10dp"
            android:layout_below="@+id/profilePasswordEditText"/>

        <Button
            android:id="@+id/saveProfileButton"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_below="@id/editProfilePassword"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:text="Save"
            android:backgroundTint="@color/aqua_seaweed_green"/>

    </RelativeLayout>

</ScrollView>